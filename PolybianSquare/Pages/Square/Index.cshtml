@page
@model PolybianSquare.Pages.Square.Index

@{
    ViewData["Title"] = "Полибианский квадрат";
    Layout = "Shared/_Layout";
}

<h2 class="mb-2">Полибианский квадрат</h2>
<div class="row mb-2">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header">Шифрование текста</h3>
            <div class="card-body">
                <form method="post" asp-antiforgery="true" asp-page-handler="Encrypt">
                    <label class="fs-6 form-label fw-bolder text-dark">Введите текст:</label>
                    <input type="text" asp-for="OpenText" class="form-control mb-4"/>
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header">Зашифрованный текст</h3>
            <div class="card-body">
                <div class="text-center">
                    @Model.EncryptedText
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row mb-2">
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header">Расшифрование текста</h3>
            <div class="card-body">
                <form method="post" asp-antiforgery="true" asp-page-handler="Decrypt">
                    <label class="fs-6 form-label fw-bolder text-dark">Введите зашифрованный текст:</label>
                    <input type="text" asp-for="EncryptedMyText" class="form-control mb-4"/>
                    <button type="submit" class="btn btn-primary">Отправить</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <h3 class="card-header">Расшифрованный текст</h3>
            <div class="card-body">
                <div class="text-center">
                    @Model.DecryptedText
                </div>
            </div>
        </div>
    </div>
</div>